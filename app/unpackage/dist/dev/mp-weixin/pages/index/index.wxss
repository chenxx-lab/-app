.home swiper {
  width: 758rpx;
  height: 380rpx;
}
.home swiper image {
  width: 100%;
  height: 100%;
}
.home .nav {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 15rpx;
}
.home .nav .nav-item {
  text-align: center;
  width: 25%;
}
.home .nav .nav-item view {
  margin-left: 35rpx;
  width: 120rpx;
  height: 120rpx;
  background-color: #DC143C;
  border-radius: 60rpx;
  margin: 10 auto;
  color: #FFFFFF;
}
.home .nav .nav-item view image {
  width: 60rpx;
  height: 60rpx;
  padding-top: 30rpx;
}
.home .nav .nav-item,
.home .nav .nav-item text {
  font-size: 30rpx;
}
.home,
.home .hot_goods {
  background: #FFFFFF;
  overflow: hidden;
}
.home .title,
.home .hot_goods .title {
  color: #DC143C;
  height: 50px;
  line-height: 50px;
  margin: 10px 0;
  text-align: center;
  letter-spacing: 20rpx;
  box-shadow: 2px 3px 8px #C0C0C0;
}
.home,
.home .goods_list,
.home .hot_goods,
.home .hot_goods .goods_list {
  width: 758rpx;
  position: relative;
  margin-left: 0rpx;
}
.home .goods_item,
.home .goods_list .goods_item,
.home .hot_goods .goods_item,
.home .hot_goods .goods_list .goods_item {
  position: relative;
  float: right;
  width: 370rpx;
  height: 550rpx;
  box-shadow: 1px 2px 3px #C8C7CC;
  margin: 5rpx 0;
}
.home .goods_item image,
.home .goods_list .goods_item image,
.home .hot_goods .goods_item image,
.home .hot_goods .goods_list .goods_item image {
  width: 80%;
  height: 150px;
  padding-left: 30rpx;
}
.home .goods_item,
.home .goods_item .price,
.home .goods_list .goods_item,
.home .goods_list .goods_item .price,
.home .hot_goods .goods_item,
.home .hot_goods .goods_item .price,
.home .hot_goods .goods_list .goods_item,
.home .hot_goods .goods_list .goods_item .price {
  padding-top: 10rpx;
  color: #DC143C;
  font-size: 40rpx;
  margin: 20rpx 0 5rpx 0;
}
.home .goods_item text:nth-child(2),
.home .goods_item .price text:nth-child(2),
.home .goods_list .goods_item text:nth-child(2),
.home .goods_list .goods_item .price text:nth-child(2),
.home .hot_goods .goods_item text:nth-child(2),
.home .hot_goods .goods_item .price text:nth-child(2),
.home .hot_goods .goods_list .goods_item text:nth-child(2),
.home .hot_goods .goods_list .goods_item .price text:nth-child(2) {
  color: #eee;
  font-size: 28rpx;
  padding-left: 20rpx;
  text-decoration: line-through;
}
.home .goods_item,
.home .goods_item .font,
.home .goods_list .goods_item,
.home .goods_list .goods_item .font,
.home .hot_goods .goods_item,
.home .hot_goods .goods_item .font,
.home .hot_goods .goods_list .goods_item,
.home .hot_goods .goods_list .goods_item .font {
  color: #333333;
  font-family: "微软雅黑";
  font-size: 30rpx;
  padding-right: 10rpx;
}

